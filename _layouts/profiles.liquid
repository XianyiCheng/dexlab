---
layout: page
---

<div class="post">
  <article>
    {% if page.profiles %}
      {% for group in page.profiles %}
        <h2 style="margin-top: 2rem; margin-bottom: 1rem;">{{ group.title }}</h2>
        <div style="display: flex; flex-wrap: wrap; gap: 2rem; margin-bottom: 3rem;">
          {% for member in group.members %}
            <div style="width: 180px; text-align: center;">
              {% if member.image %}
                <img 
                  src="{{ 'assets/img/' | append: member.image | relative_url }}" 
                  alt="{{ member.name }}" 
                  style="width: 150px; height: 150px; object-fit: cover; margin-bottom: 0.5rem; border-radius: 8px;">
              {% endif %}
              <div style="font-size: 1rem;">{{ member.name }}</div>
              <div style="font-size: 1rem;">{{ member.position }}</div>
            </div>
          {% endfor %}
        </div>
      {% endfor %}
    {% endif %}
  </article>
</div>

{{ content }}
